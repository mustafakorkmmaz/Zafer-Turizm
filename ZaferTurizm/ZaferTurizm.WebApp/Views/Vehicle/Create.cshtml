
@model VehicleDto

<h1>Yeni Araç Modeli</h1>
<div class="row">
    <div class="col-12 col-sm-8 col-md-6">
        <form method="post" enctype="multipart/form-data" asp-controller="Vehicle" asp-action="Create">
            <div class="form-group">
                <div>
                    <label class="form-label">Marka Adı</label>
                    <select asp-items="(SelectList)ViewBag.Det" asp-for="VehicleDefinitionId"  class="form-select w-100">
                        <option>-- Seçiniz --</option>
                    </select>
                    @*@Html.TextBoxFor(m=>m.Name,new {@class="form-control"})*@
                </div> @*asp-itemsa SelectListitem göndermen gerekiyor*@
                
                <div>
                    <label class="form-label">PLaka</label>
                    <input class="form-control w-100" asp-for="PlateNumber" />

                </div>
                <div>
                    <label class="form-label">Fotoğraf</label>
                    <input type="file" class="form-control w-100" asp-for="ImagesUrl" />

                </div>
                
                <div class="mt-2">
                    <button id="create-button" type="submit" class="btn btn-success">
                        Kaydet
                    </button>
                </div>

            </div>
        </form>
    </div>

</div>