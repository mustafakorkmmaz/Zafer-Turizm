
@model IEnumerable<TicketSummary>

<h1>Yolcular</h1>

<div class="row">
    <div class="col-12">
        <div class="text-end mb-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm float-end mb-2">Yeni Bilet Al</a>
        </div>
        <table class="table table-striped table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Yolcu Bilgileri</th>
                    <th>Sefer Bilgileri</th>
                    
                    <th>İşlemler</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.PassengerInfos</td>
                        <td>@item.BusTripName</td>
                        
                        
                        <td>
                            <div class="btn-group">
                                @*Bu yola Tag Helpers denir.. daha yaygın*@
                                

                                @*@Html.ActionLink("Sil","Delete","VehicleModel", new {id=item.Id}) --> Bu yol html helpers *@
                                <a class="btn btn-warning d-inline-block ms-2" asp-controller="Passenger" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>


                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
